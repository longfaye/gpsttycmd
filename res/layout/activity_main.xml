<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gpsttycmd.MainActivity" >

    <TextView
        android:id="@+id/tv_buttonrmc"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/tv_buttongsa"
        android:layout_alignTop="@+id/BTRMC"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:textSize="15sp" />

    <Button
        android:id="@+id/BTRMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BTGSV"
        android:layout_below="@+id/BTGSV"
        android:layout_marginTop="26dp"
        android:onClick="BTRMC"
        android:text="BTRMC" />

    <TextView
        android:id="@+id/tv_buttongsv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/BTGSV"
        android:layout_alignLeft="@+id/tv_buttonrmc"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:textSize="15sp" />

    <Button
        android:id="@+id/BTGSA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_buttongsv"
        android:layout_marginBottom="34dp"
        android:layout_toLeftOf="@+id/tv_buttongsa"
        android:onClick="BTGSA"
        android:text="BTGSA" />

    <TextView
        android:id="@+id/tv_buttongsa"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/BTGSA"
        android:layout_marginLeft="64dp"
        android:layout_toRightOf="@+id/BTRMC"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:textSize="15sp" />

    <Button
        android:id="@+id/BTGSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:onClick="BTGSV"
        android:text="BTGSV" />

</RelativeLayout>